{
  "$schema":"http://json-schema.org/draft-07/schema#",
  "title":"BespokeArmorOrShield",
  "type":"object",
  "required":["id","name","slot","base","enhancement","gp_total","source"],
  "properties":{
    "id":{"type":"string"},
    "name":{"type":"string"},
    "slot":{"enum":["armor","shield"]},
    "base":{"type":"string"},
    "enhancement":{"type":"integer","minimum":0,"maximum":5},
    "special_ids":{"type":"array","items":{"type":"string"}},
    "gp_total":{"type":"number"},
    "size":{"type":"string"},
    "source":{"type":"object","properties":{"book":{"type":"string"},"page":{"type":["integer","null"]}}},
    "notes":{"type":"string"}
  }
}
